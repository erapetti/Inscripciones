<div class="panel panel-default">
  <div class="panel-heading">
    Identificación del adulto responsable que va a ir a la entrevista en el liceo
  </div>
  <div class="panel-body form-horizontal">

    <div class="form-group">
      <label for="pais-adulto" class="col-sm-2 control-label">País:</label>
      <div class="dropdown col-sm-2">
        <input type="hidden" name="pais-adulto" value="UY" id="dd-pais-adulto">
        <button class="btn btn-default dropdown-toggle" type="button" id="btn-dd-pais-adulto" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
        <ul class="dropdown-menu" aria-labelledby="btn-dd-pais-adulto" dd="pais-adulto">
          <li><a href="#" dd="pais-adulto" data="AR">Argentina</a></li>
          <li><a href="#" dd="pais-adulto" data="BR">Brasil</a></li>
          <li><a href="#" dd="pais-adulto" data="PY">Paraguay</a></li>
          <li><a href="#" dd="pais-adulto" data="UY">Uruguay</a></li>
          <li><a href="#" dd="pais-adulto" data="VZ">Venezuela</a></li>
          <li role="separator" class="divider"></li>
          <% paises.forEach(function(info) { -%>
            <li><a href="#" dd="pais-adulto" data="<%= info.PaisCod %>"><%= info.PaisNom %></a></li>
          <% }) %>
        </ul>
      </div>
    </div>

    <div class="form-group">
      <label for="doccod-adulto" class="col-sm-2 control-label">Tipo de documento:</label>
      <div class="dropdown col-sm-2">
        <input type="hidden" name="doccod-adulto" value="CI" id="dd-doccod-adulto">
        <button class="btn btn-default dropdown-toggle" type="button" id="btn-dd-doccod-adulto" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
        <ul class="dropdown-menu" aria-labelledby="btn-dd-doccod-adulto" dd="doccod-adulto">
          <li><a href="#" dd="doccod-adulto" data="CI">Cédula de identidad</a></li>
          <li><a href="#" dd="doccod-adulto" data="PSP">Pasaporte</a></li>
        </ul>
      </div>
    </div>

    <div class="form-group">
      <label for="perdocid-adulto" class="col-sm-2 control-label">Número de documento:</label>
      <div class="col-sm-2">
        <input type="text" class="form-control" id="perdocid-adulto" name="perdocid-adulto" placeholder="12345678"<% if (perdocid_adulto){ %> value="<%= perdocid_adulto %>"<% } %>>
      </div>
      <label style="font-weight:normal;padding-top:0.5em" aria-label-for="perdocid-adulto">Sólo los números y las letras del número de documento</label>
    </div>

    <div class="form-group">
      <label for="telefono-adulto" class="col-sm-2 control-label">Teléfono:</label>
      <div class="col-sm-2">
        <input type="text" class="form-control" id="telefono-adulto" name="telefono-adulto" placeholder="099123456"<% if (telefono_adulto){ %> value="<%= telefono_adulto %>"<% } %>>
      </div>
    </div>
  </div>
</div>
