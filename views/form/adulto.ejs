<div class="panel panel-default">
  <div class="panel-heading">
    Identificación del adulto responsable que va a ir a la entrevista en el liceo
  </div>
  <div class="panel-body">
    <div class="form-group">

      <label for="pais-adulto" class="col-sm-2 control-label">País:</label>
      <div class="dropdown col-sm-2" id="dd-pais-adulto">
        <button class="btn btn-default dropdown-toggle" type="button" id="btn-pais-adulto" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <input type="hidden" name="pais-adulto" value="UY" id="pais-adulto">
          <span id="lbl-pais-adulto">Uruguay</span>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="btn-pais-adulto">
          <li><a data-value="AR">Argentina</a></li>
          <li><a data-value="BR">Brasil</a></li>
          <li><a data-value="PY">Paraguay</a></li>
          <li><a data-value="UY">Uruguay</a></li>
          <li><a data-value="VZ">Venezuela</a></li>
          <li role="separator" class="divider"></li>
          <% paises.forEach(function(info) { -%>
            <li><a data-value="<%= info.PaisCod %>"><%= info.PaisNom %></a></li>
          <% }) %>
        </ul>
      </div>
    </div>

    <div class="form-group">
      <label for="doccod-adulto" class="col-sm-2 control-label">Tipo de documento:</label>
      <div class="dropdown col-sm-2" id="dd-doccod-adulto">
        <button class="btn btn-default dropdown-toggle" type="button" id="btn-doccod-adulto" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <input type="hidden" name="doccod-adulto" value="CI" id="doccod-adulto">
          <span id="lbl-doccod-adulto">Cédula de identidad</span>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="btn-doccod-adulto">
          <li><a data-value="CI">Cédula de identidad</a></li>
          <li><a data-value="PSP">Pasaporte</a></li>
        </ul>
      </div>
    </div>

    <div class="form-group">
      <label for="perdocid-adulto" class="col-sm-2 control-label">Número de documento:</label>
      <div class="col-sm-2">
        <input type="text" class="form-control" id="perdocid-adulto" name="perdocid-adulto" placeholder="12345678"<% if (sesion.perdocid_adulto){ %> value="<%= sesion.perdocid_adulto %>"<% } %>>
      </div>
      <label style="font-weight:normal;padding-top:0.5em" aria-label-for="perdocid-adulto">Sólo los números y las letras del número de documento</label>
    </div>

    <div class="form-group">
      <label for="telefono-adulto" class="col-sm-2 control-label">Teléfono:</label>
      <div class="col-sm-2">
        <input type="text" class="form-control" id="telefono-adulto" name="telefono-adulto" placeholder="099123456"<% if (sesion.telefono_adulto){ %> value="<%= sesion.telefono_adulto %>"<% } %>>
      </div>
    </div>
  </div>
</div>
