                  <li><a href="#" dd="departamento" data="7">Florida</a></li>
                  <li><a href="#" dd="departamento" data="8">Lavalleja</a></li>
                  <li><a href="#" dd="departamento" data="9">Maldonado</a></li>
                  <li><a href="#" dd="departamento" data="10">Montevideo</a></li>
                  <li><a href="#" dd="departamento" data="11">Paysandú</a></li>
                  <li><a href="#" dd="departamento" data="12">Río Negro</a></li>
                  <li><a href="#" dd="departamento" data="13">Rivera</a></li>
                  <li><a href="#" dd="departamento" data="14">Rocha</a></li>
                  <li><a href="#" dd="departamento" data="15">Salto</a></li>
                  <li><a href="#" dd="departamento" data="16">San José</a></li>
                  <li><a href="#" dd="departamento" data="17">Soriano</a></li>
                  <li><a href="#" dd="departamento" data="18">Tacuarembó</a></li>
                  <li><a href="#" dd="departamento" data="19">Treinta y Tres</a></li>
                </ul>
              </div>
            </td></tr><tr><td>

              <label>Localidad</label>:
            </td><td>
              <div class="btn-group">
                <input type="hidden" name="localidad" value="<%= locId %>" id="dd-localidad">
                <button type="button" id="btn-dd-localidad" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Seleccione una localidad <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" dd="localidad" id="ul-dd-localidad">
                  <!-- se carga por ajax -->
                </ul>
              </div>
            </td></tr><tr><td>

              <label>Plan</label>:
            </td><td>

              <div class="btn-group">
                <input type="hidden" name="plan" value="<%= planId %>" id="dd-plan">
                <button type="button" id="btn-dd-plan" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Seleccione un plan <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" dd="plan">
                <% for (plan in planes) { %>
                  <li><a href="#" dd="plan" data="<%= plan %>"><%= planes[plan] %></a></li>
                <% } %>
                </ul>
              </div>

            </td></tr><tr><td>

              <label>Ciclo</label>:
            </td><td>

              <div class="btn-group">
                <input type="hidden" name="ciclo" value="<%= cicloId %>" id="dd-ciclo">
