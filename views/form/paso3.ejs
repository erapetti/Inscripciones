                <ul class="dropdown-menu" dd="ciclo">
                <% for (ciclo in ciclos) { %>
                  <li><a href="#" dd="ciclo" data="<%= ciclo %>"><%= ciclos[ciclo] %></a></li>
                <% } %>
                </ul>
              </div>

            </td></tr><tr><td>

              <label>Grado</label>:
            </td><td>

              <div class="btn-group">
                <input type="hidden" name="grado" value="<%= gradoId %>" id="dd-grado">
                <button type="button" id="btn-dd-grado" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Seleccione un grado <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" dd="grado">
                <% for (grado in grados) { %>
                  <li><a href="#" dd="grado" data="<%= grado %>"><%= grados[grado] %></a></li>
                <% } %>
                </ul>
              </div>

            </td></tr><tr><td>

              <label>Orientación</label>:
            </td><td>

              <div class="btn-group">
                <input type="hidden" name="orientacion" value="<%= orientacionId %>" id="dd-orientacion">
                <button type="button" id="btn-dd-orientacion" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Seleccione una orientacion <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" dd="orientacion">
                <% for (orientacion in orientaciones) { %>
                  <li><a href="#" dd="orientacion" data="<%= orientacion %>"><%= orientaciones[orientacion] %></a></li>
                <% } %>
                </ul>
              </div>

            </td></tr><tr><td>

              <label>Opción</label>:
            </td><td>

              <div class="btn-group">
                <input type="hidden" name="opcion" value="<%= opcionId %>" id="dd-opcion">
                <button type="button" id="btn-dd-opcion" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Seleccione una opcion <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" dd="opcion">
                <% for (opcion in opciones) { %>
                  <li><a href="#" dd="opcion" data="<%= opcion %>"><%= opciones[opcion] %></a></li>
                <% } %>
                </ul>
              </div>

            </td></tr>
          </table>


        </div>
      </div>

      <button type="submit" class="btn btn-primary" id="btn-back" name="paso2"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Atrás</button>
      <button type="submit" class="btn btn-primary" id="btn-paso4">Buscar liceos <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></button>

      <div class="alert alert-danger" id="mensaje" style="display:none"></div>
      <script type="text/javascript">
        textoMensaje='<% if (typeof mensaje!=='undefined') { %><%= mensaje %><% } %>'
      </script>

    </form>
  </div>
</div>
